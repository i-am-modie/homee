{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020"],
        "module": "es2020",
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "baseUrl": ".",
        "esModuleInterop": true
        // "skipLibCheck": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
